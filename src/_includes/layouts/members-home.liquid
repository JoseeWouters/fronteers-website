{%- include partials/utility/html-head -%}
<body data-layout="members-home">
    {%- include partials/page-header/_page-header -%}

    <main class="{% if useHero %}styledheader{% endif %}">
        <div class="inner-wrapper">
            <div class="page-content">
                <h2 class="visually-hidden">{{ title }}</h2>
                {{ content }}

                <table>
                    <thead>
                        <td>Naam</td>
                        <td>Werkgever</td>
                    </thead>
                    <tbody>
                        {%- for lid in members-list %}
                            {% unless lid.naam == "EOF" %}
                            <tr>
                                <td>
                                    {%- for member in members -%}
                                        {%- if member.data.title == lid.naam -%}
                                            {%- assign memberHasAProfilePage = true -%}
                                            {%- assign memberUrl = member.url -%}
                                        {%- else -%}
                                            {%- assign memberHasAProfilePage = false -%}
                                        {%- endif -%}

                                        {%- if memberHasAProfilePage -%}
                                            <a href="{{ memberUrl }}">
                                                {{ lid.naam }}</a>
                                            {% break %}
                                        {%- else -%}
                                            <span class="blog-author">{{ lid.naam }}</span>
                                        {%- endif -%}
                                        {% break %}
                                    {%- endfor -%}
                                </td>
                                <td>
                                    {% if lid.werkgever == "-" %}
                                    {% else %}
                                    {{ lid.werkgever }}
                                    {% endif %}
                                </td>
                            </tr>
                            {% endunless %}
                        {% endfor -%}
                    </tbody>
                </table>

                {%- include partials/pagination -%}
            </div>
        </div>
    </main>

    {%- include partials/page-footer/_page-footer -%}
</body>
</html>
