        {%- if pagination.pageLinks.length > 1 -%}
    <nav class="pagination">
    {%- if pagination.previousPageLink -%}
        <a aria-label="{{ translations[locale].previous }}" class="pagination__navigation-button" href="{{ pagination.previousPageHref | url }}"><</a>
    {%- endif -%}

